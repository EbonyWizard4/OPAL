#:kivy 2.0.0

<Tela>:
    orientation:'vertical'
    padding:10
    spacing:10
    BoxLayout:
        orientation: 'horizontal'
        id:Box_principal
        spacing:10
        BoxLayout:
            orientation:'vertical'
            id:Box_Coluna_1
            padding:2
            spacing:2
            BoxLayout:
                orientation:'horizontal'
                id:Box_Hora_inicio
                size_hint_y:None
                height: 30
                spacing:2
                canvas:
                    Color:
                        rgba: 0.1, 0.1, 0.1, 0.3
                    Rectangle:
                        size: self.size
                        pos: self.pos            
                Label:
                    text:'Hora de Início:'
                    canvas:
                        Color:
                            rgba: 0.3, 0.3, 0.3, 0.3
                        Rectangle:
                            size: self.size
                            pos: self.pos            
                Label:
                    id:Lb_Hora_inicio
                    canvas:
                        Color:
                            rgba: 0.3, 0.3, 0.3, 0.3
                        Rectangle:
                            size: self.size
                            pos: self.pos            
                    text:'--:--'

            BoxLayout:
                orientation:'vertical'
                id:Box_Lista_horarios
                spacing:2
                canvas:
                    Color:
                        rgba: 0.1, 0.1, 0.1, 0.3
                    Rectangle:
                        size: self.size
                        pos: self.pos            
                Label:
                    id:lb_titulo_lista
                    text:'Lista de horarios agendados'
                    size_hint_y:None
                    height: 30
                    canvas:
                        Color:
                            rgba: 0.3, 0.3, 0.3, 0.3
                        Rectangle:
                            size: self.size
                            pos: self.pos                      

                ScrollView:
                    BoxLayout:
                        id: Box_Lista
                        orientation: 'vertical'
                        size_hint_y:None
                        height:self.minimum_height
                        canvas:
                            Color:
                                rgba: 0.4, 0.2, 0.6, 0.3
                            Rectangle:
                                size: self.size
                                pos: self.pos            
        BoxLayout:
            orientation:'vertical'
            id:Box_Coluna_2
            padding:2
            spacing:2
            canvas:
                Color:
                    rgba: 0.1, 0.1, 0.1, 0.3
                Rectangle:
                    size: self.size
                    pos: self.pos
            BoxLayout:
                orientation:'horizontal'
                id:Box_set_horario
                spacing:2
                canvas:
                    Color:
                        rgba: 0.3, 0.3, 0.3, 0.3
                    Rectangle:
                        size: self.size
                        pos: self.pos            
            BoxLayout:
                orientation:'horizontal'
                id:Box_Botões
                
                


    
    BoxLayout:
        orientation:'horizontal'
        id:Box_Botoes
        size_hint_y:None
        height: 60        
        canvas:
            Color:
                rgba: 0.1, 0.1, 0.1, 0.3
            Rectangle:
                size: self.size
                pos: self.pos        
